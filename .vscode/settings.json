{
  // Editor settings
  "editor.fontSize": 14,
  "editor.tabSize": 2,
  "editor.fontFamily": "Fira Code",
  "editor.fontLigatures": true,
  "editor.formatOnSave": true,
  "editor.wordWrap": "on",
  // Theme settings
  "workbench.colorTheme": "Bearded Theme Arc Blueberry",
  "workbench.iconTheme": "bearded-icons",
  // JSON settings
  "json.schemas": [
    {
      "fileMatch": ["/package.json"],
      "url": "http://json.schemastore.org/package"
    },
    {
      "fileMatch": ["/bower.json"],
      "url": "http://json.schemastore.org/bower"
    }
  ],
  // Biome settings
  "editor.defaultFormatter": "biomejs.biome", // Use Biome as the default formatter for all files
  "cSpell.words": [
    "apos",
    "biomejs",
    "callout",
    "Chakra",
    "Codespace",
    "gsap",
    "Hyperledger",
    "jsxliterals",
    "justinjdaniel",
    "nextjs",
    "noopener",
    "noreferrer",
    "pageview",
    "quoteless",
    "rehype",
    "staticity",
    "tailwindcss",
    "toploader"
  ],
  "conventionalCommits.scopes": [
    "format",
    "assets",
    "page",
    "structure",
    "dependencies",
    "docs",
    "configuration",
    "components",
    "blog",
    "style"
  ],
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[github-actions-workflow]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}
