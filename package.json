{
  "name": "justinjdaniel.com",
  "version": "4.2.0",
  "description": "My portfolio website built with Next.js and React.",
  "homepage": "https://justinjdaniel.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/justinjdaniel/justinjdaniel.com"
  },
  "author": {
    "name": "Justin J Daniel"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/justinjdaniel/justinjdaniel.com/issues"
  },
  "keywords": ["portfolio", "nextJs", "react"],
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint .",
    "format": "pnpm biome format --write",
    "check": "pnpm biome check --write",
    "prepare": "husky"
  },
  "dependencies": {
    "@gsap/react": "^2.1.2",
    "@next/mdx": "15.3.1",
    "@vercel/analytics": "^1.5.0",
    "gsap": "^3.13.0",
    "motion": "^12.9.4",
    "next": "15.3.1",
    "next-mdx-remote": "^5.0.0",
    "nextjs-toploader": "^3.8.16",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "sugar-high": "^0.9.3"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@tailwindcss/postcss": "^4.1.3",
    "husky": "^9.1.7",
    "lint-staged": "^16.0.0",
    "tailwindcss": "^4.1.3"
  },
  "packageManager": "pnpm@10.0.0",
  "lint-staged": {
    "*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
      "biome check --files-ignore-unknown=true",
      "biome check --write --no-errors-on-unmatched",
      "biome check --write --organize-imports-enabled=false --no-errors-on-unmatched",
      "biome check --write --unsafe --no-errors-on-unmatched",
      "biome format --write --no-errors-on-unmatched",
      "biome lint --write --no-errors-on-unmatched"
    ],
    "*": ["biome check --no-errors-on-unmatched --files-ignore-unknown=true"]
  }
}
